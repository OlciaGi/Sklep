@model IEnumerable<SklepKsiegarniaInt.Models.Kategoria>
@using SklepKsiegarniaInt.Infrastructure
 
<nav class="KategorieVertical">
    <ul>

        @foreach (var kategoria in Model)
        {
            <li>
                <a href="@Url.Action("Lista", "Ksiazki", new { nazwaKategori = kategoria.NazwaKategorii.ToString()})" 
                   style="background-image: url(@Url.IkonyKategoriiSciezka(kategoria.NazwaPlikuIkony)); ">
                   @kategoria.NazwaKategorii
                </a>
            </li>
        }

    </ul>
</nav>